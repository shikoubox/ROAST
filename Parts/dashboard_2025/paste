# Link for 32-bit ARM (ARMv6)
sudo ln -s /usr/src/linux-headers-6.1.21+ /lib/modules/6.1.21+/build

# Link for ARMv7
sudo ln -s /usr/src/linux-headers-6.1.21+ /lib/modules/6.1.21-v7+/build

# Link for ARMv7l (Raspberry Pi 2/3)
sudo ln -s /usr/src/linux-headers-6.1.21+ /lib/modules/6.1.21-v7l+/build

# Link for ARMv8 64-bit (Raspberry Pi 4/5 64-bit OS)
sudo ln -s /usr/src/linux-headers-6.1.21+ /lib/modules/6.1.21-v8+/build

